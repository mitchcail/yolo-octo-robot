<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Like</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feed.each do |post| %>
      <tr>
        <% if user_signed_in? %>
          <td> <%= button_to "^", post_likes_path(post) %> </td>
        <% end %>
        <td><%= post.content %></td>
        <td><%= post.user.email if post.user %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
