<!DOCTYPE html>
<html>
<head>
  <title>Geosharer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<header class="header-21">
    <div class="container">
        <div class="row">
            <div class="navbar col-sm-12" role="navigation">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle"></button>
                    <%= link_to "Bulletin", root_path, class: "brand" %>
                </div>
                <div class="navbar-collapse collapse">
                    <form class="navbar-form pull-right">
                    	<% if user_signed_in? %>
                    		<%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-default" %>
                    	<% else %>
                        	<%= link_to "Login", new_user_session_path, class: "btn btn-default"%>
                        <% end %>
                    </form>
                </div>
            </div>
        </div>
    </div>
</header>


<%= yield %>

</body>
</html>
